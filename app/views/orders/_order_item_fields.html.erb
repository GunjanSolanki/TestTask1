<div class="nested-fields">
  <%= f.hidden_field :_destroy %>
  <div>
    <%= f.label 'Select Product' %>
    <%= f.collection_select :product_id, Product.all, :id, :name %>
  </div>
  <div>
    <%= f.label 'Select Quantity' %>
    <%= f.number_field :quantity %>
  </div>
  <div>
      <%= link_to "Remove", '#', class: "remove_fields" %>
  </div>
</div>