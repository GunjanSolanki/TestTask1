<h2><%= t('order.create_order') %></h2>
<%= form_for @order do |f| %>
	<%= f.fields_for :order_item do |order_item| %>
		<%= order_item.label 'Select Product' %>
		<%= order_item.collection_select :product_id, Product.all, :id, :name %>
	<% end %>
	<div class="form-group">
		<%= f.label 'Amount' %>
		<%= f.text_field :amount %>
	</div>
	<%= f.submit %>
<% end %>
